{
  "name": "@codecb/single-spa-layout",
  "version": "2.0.1",
  "description": "Layout engine for single-spa applications",
  "type": "module",
  "exports": {
    "./browser": {
      "import": "./dist/esm/browser.js"
    },
    "./server": {
      "import": "./dist/esm/server.js",
      "require": "./dist/cjs/server.js"
    }
  },
  "typesVersions": {
    "*": {
      "browser": [
        "./dist/esm/browser.d.ts"
      ],
      "server": [
        "./dist/esm/server.d.ts",
        "./dist/cjs/server.d.ts"
      ]
    }
  },
  "scripts": {
    "prepublishOnly": "yarn build",
    "build": "rollup -c rollup.config.ts --configPlugin rollup-plugin-ts",
    "watch-build": "yarn build -w --environment DEVELOPMENT",
    "check-format": "prettier --check .",
    "lint": "eslint src",
    "format": "prettier --write .",
    "test": "concurrently -n w: 'yarn:test:*'",
    "test:browser": "cross-env BABEL_ENV=test jest --testEnvironment=jsdom --testPathIgnorePatterns=test/node-only --testPathIgnorePatterns=cypress",
    "test:node": "cross-env BABEL_ENV=test jest --testEnvironment=node --testPathIgnorePatterns=test/browser-only --testPathIgnorePatterns=cypress",
    "test:types": "tsd",
    "test:exports": "ls-exports path .",
    "test-e2e:firefox": "cypress run --browser firefox",
    "test-e2e:chrome": "cypress run --browser chrome",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist"
  ],
  "tsd": {
    "directory": "test"
  },
  "author": "",
  "browserslist": [
    "last 4 Safari major versions",
    "last 10 Chrome major versions",
    "last 10 Firefox major versions",
    "last 4 Edge major versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jsdom": "^16.2.13",
    "@types/merge2": "^1.3.1",
    "@types/node": "^16.11.35",
    "@types/systemjs": "^6.1.1",
    "babel-jest": "^28.0.3",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.2",
    "cypress": "^9.6.0",
    "eslint": "^8.14.0",
    "eslint-config-important-stuff": "^1.1.0",
    "eslint-config-node-important-stuff": "^2.0.0",
    "eslint-plugin-es5": "^1.5.0",
    "jest": "^28.0.3",
    "jest-cli": "^28.0.3",
    "jest-serializer-html": "^7.0.0",
    "js-correct-lockfile": "^1.0.0",
    "jsdom": "^19.0.0",
    "ls-exports": "^1.0.2",
    "parse5": "^7.0.0",
    "parse5-htmlparser2-tree-adapter": "^7.0.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.7",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^2.0.7",
    "single-spa": "^6.0.0-beta.1",
    "ts-node": "10.7.0",
    "tsd": "^0.20.0",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "merge2": "^1.4.1",
    "parse5": "^7.0.0",
    "parse5-htmlparser2-tree-adapter": "^7.0.0",
    "single-spa": "^6.0.0-beta.1"
  }
}
